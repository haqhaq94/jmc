@using InstituteMVC.InfraStructure
@model InstituteMVC.ViewModels.StudentCreationVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
<script>
    $(function () {
        $('#EnDate').datetimepicker({
            format: 'DD/MM/YYYY'
        });

        $('#SlctdSection').change(function () {
            $.ajax({
                type: "post",
                url: "/Subject/GetSubjects",
                data: { classid: $('#SlctdSection').val() },
                datatype: "json",
                traditional: true,
                success: function (data) {
                    var district = "<div id='SlctdSubjects'>";
                    for (var i = 0; i < data.length; i++) {
                        district = district + '<div class="checkbox"> <label><input type="checkbox" checked name="SlctdSubjects" value=' + data[i]["Id"] + '>' + data[i]["Name"] + '</label></div>';
                    }
                    district = district + '</div>';
                    $('#SlctdSubjects').html(district);
                    $("#FormSlctdSubjects").show();
                }
            });
        });
    });
</script>

