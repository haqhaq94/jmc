@model InstituteMVC.ViewModels.SectionVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(function () {
        $("#Timing").datetimepicker({
            format: 'LT'
        })
    });
</script>
<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Section</h4>
        <hr />
        @Html.ValidationSummary(true)

        @Html.Partial("_ClassSelection")

        <div class="form-group">
            @Html.LabelFor(model => model.Sessions.SlctdSesstion, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach(var item in Model.Sessions.Sessions)
                {
                    <div class="radio">
                        <label>
                            @Html.RadioButtonFor(model => model.Sessions.SlctdSesstion, item.Value, new { @checked = "checked" })
                            @item.Text
                        </label>
                      </div>
                   
                   
                }
                @Html.ValidationMessageFor(model => model.Sessions.SlctdSesstion)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SectionName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SectionName)
                @Html.ValidationMessageFor(model => model.SectionName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Timing, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Timing)
                @Html.ValidationMessageFor(model => model.Timing)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
