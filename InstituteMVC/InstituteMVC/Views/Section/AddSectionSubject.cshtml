@using InstituteMVC.InfraStructure
@model InstituteMVC.ViewModels.SectionSubjectVM

@{
    ViewBag.Title = "AddSectionSubject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddSectionSubject</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SectionSubjectVM</h4>
        <hr />
        @Html.ValidationSummary(true)

        @Html.PartialFor(m => m.Class, "EditorTemplates/_ClassSelection")


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Subjects.First().sbjName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Subjects)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.sbjName)
                    </td>
                    <td>
                        <div class="checkbox">
                            <input type="checkbox" name="SlctdSubjects" value="@item.SbjID" />
                        </div>
                        @Html.ActionLink("Edit", "Edit", new { id = item.SbjID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.SbjID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.SbjID })
                    </td>
                </tr>
            }

        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
